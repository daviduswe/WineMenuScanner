# Copy this file to .env and fill in your keys.
# Do NOT commit .env (it contains secrets).

# Enable enrichment (optional)
ENABLE_GEMINI_ENRICHMENT=false

# Gemini API key
GEMINI_API_KEY=

# Model name (leave default unless you know what you're doing)
GEMINI_MODEL=gemini-1.5-flash

# Debug logging (optional)
GEMINI_DEBUG=0

# --- Gemini enrichment cache (optional) ---
# Cache Gemini results to avoid repeated LLM calls for the same wine names.
# Uses an in-memory cache plus a persistent SQLite cache.

# Enable/disable caching (default: 1)
GEMINI_CACHE=1

# Cache TTL in seconds (default: 30 days)
GEMINI_CACHE_TTL_SECONDS=2592000

# Path to sqlite cache file (default: backend/.gemini_cache.sqlite)
GEMINI_CACHE_PATH=backend/.gemini_cache.sqlite

# Backend dev server (uvicorn)
# Enable auto-reload (spawns a reloader process; may cause multiprocessing semaphore warnings with ML libs)
BACKEND_RELOAD=0
